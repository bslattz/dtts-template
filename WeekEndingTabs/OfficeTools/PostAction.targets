<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="AddPostAction" AfterTargets="PublishOnly">
    <PropertyGroup>
      <PowerShellExe Condition=" '$(PowerShellExe)'=='' ">%WINDIR%\System32\WindowsPowerShell\v1.0\powershell.exe</PowerShellExe>
      <ScriptLocation Condition=" '$(ScriptLocation)'=='' ">C:\Users\Admin\Documents\GitHub\powershell-scripts\postAction.ps1</ScriptLocation>
      <PostAction>FileCopyPDA.FileCopyPDA</PostAction>
    </PropertyGroup>
    <Exec Command="$(PowerShellExe) -NonInteractive -executionpolicy Unrestricted -command &quot;&amp; { &amp;&apos;$(ScriptLocation)&apos;&#x20;&apos;$(PostAction)&apos; } &quot;&gt; echo" />
  </Target>

</Project>
